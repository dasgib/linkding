!!!
%html
  %head
    %title Linkding
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header#header
      %h1#logo= link_to "Linkding", root_path

      %nav#navigation
        %ul
          - if user_signed_in?
            %li= link_to t('layout.add_bookmark'), new_bookmark_path

      %nav#account-nav
        - if user_signed_in?
          .account
            = current_user.email
            = avatar(current_user, id: 'avatar')
          = link_to t('layout.sign_out'), destroy_user_session_path
        - else
          = link_to t('layout.sign_in'), new_user_session_path

    #main
      #content
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
        = yield

      #sidebar
        = yield :sidebar
